<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.galih.testng</groupId>
  <artifactId>selenium</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Selenium Test</name>
  
  <properties>
  	<selenium.version>3.14.0</selenium.version>
  	<testng.version>7.3.0</testng.version>
  </properties>
  
  
  <dependencies>
  	<dependency>
  		<groupId>org.seleniumhq.selenium</groupId>
  		<artifactId>selenium-java</artifactId>
  		<version>${selenium.version}</version>
  	</dependency>
  	<dependency>
  		<groupId>org.testng</groupId>
  		<artifactId>testng</artifactId>
  		<version>${testng.version}</version>
  	</dependency>
  </dependencies>
   <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <systemPropertyVariables>
            <webdriver.chrome.driver>C:/Users/Administrator/Documents/tools/chromedriver/chromedriver.exe</webdriver.chrome.driver>
            <webdriver.gecko.driver.binary>C:/Users/Administrator/Documents/tools/geckodriver-x86/geckodriver.exe</webdriver.gecko.driver.binary>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>